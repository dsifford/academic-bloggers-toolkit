{
  "name": "academic-bloggers-toolkit",
  "version": "4.13.0-beta.1",
  "description": "A plugin extending the functionality of WordPress for Academic Blogging",
  "license": "GPL-3.0",
  "repository": "dsifford/academic-bloggers-toolkit",
  "author": "Derek P Sifford",
  "contributors": [
    {
      "name": "Frank Bennett"
    }
  ],
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "npm test && npm run lint",
    "test": "jest --coverage",
    "test-ci": "jest --coverage --runInBand && npm run build && bundlesize",
    "posttest": "npm run lint",
    "lint": "tslint -p . -t codeFrame",
    "start": "gulp",
    "build": "NODE_ENV=production gulp",
    "deploy": "IS_DEPLOYING=true NODE_ENV=production torus run gulp && npm run zip && ./lib/scripts/deploy.sh",
    "version": "gulp bump && git add -A && npm run zip",
    "inspect-bundles": "npx bundle-buddy dist/**/*.map",
    "up": "docker-compose up -d && docker-compose logs -f wordpress",
    "down": "docker-compose down -v",
    "update-translations": "torus run ts-node ./lib/scripts/update-translations.ts",
    "update-styles": "torus run ts-node ./lib/scripts/update-styles.ts",
    "zip": "npm run build && ./lib/scripts/zip.sh"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.37",
    "@babel/core": "^7.0.0-beta.37",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.37",
    "@babel/preset-env": "^7.0.0-beta.37",
    "@babel/preset-react": "^7.0.0-beta.37",
    "@types/classnames": "^2.2.3",
    "@types/common-tags": "^1.4.0",
    "@types/enzyme": "^3.1.6",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/gulp": "^4.0.5",
    "@types/gulp-replace": "0.0.31",
    "@types/gulp-sort": "0.0.32",
    "@types/he": "^0.5.29",
    "@types/jest": "^22.0.1",
    "@types/node": "^9.3.0",
    "@types/react": "^16.0.34",
    "@types/react-autosuggest": "^9.3.2",
    "@types/react-dom": "^16.0.3",
    "@types/react-test-renderer": "^16.0.0",
    "@types/webpack": "^3.8.2",
    "awesome-typescript-loader": "^3.4.1",
    "babel-core": "^7.0.0-beta.3",
    "babel-loader": "^8.0.0-beta.0",
    "browser-sync": "^2.23.5",
    "bundlesize": "^0.15.3",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.8",
    "custom-event-polyfill": "^0.3.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "enzyme-to-json": "^3.3.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "gulp": "^4.0.0",
    "gulp-replace": "^0.6.1",
    "gulp-sort": "^2.0.0",
    "gulp-uglify": "^3.0.0",
    "gulp-wp-pot": "^2.0.7",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.0.6",
    "lint-staged": "^6.0.0",
    "merge-stream": "^1.0.1",
    "mobx-react-devtools": "^4.2.15",
    "node-sass": "^4.7.2",
    "prettier": "^1.10.2",
    "proxy-polyfill": "^0.1.7",
    "react-test-renderer": "^16.2.0",
    "rollbar": "^2.3.7",
    "rollbar-sourcemap-webpack-plugin": "^2.2.0",
    "sass-loader": "^6.0.6",
    "snapshot-diff": "^0.2.2",
    "style-loader": "^0.19.1",
    "torus-cli": "^0.29.0",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-react": "^3.4.0",
    "uglify-es": "^3.3.5",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack": "^3.10.0",
    "whatwg-fetch": "^2.0.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.37",
    "astrocite": "^0.10.0",
    "citeproc": "^2.1.183",
    "common-tags": "^1.7.2",
    "focus-trap-react": "^3.1.1",
    "he": "^1.1.1",
    "mobx": "^3.4.1",
    "mobx-react": "^4.3.5",
    "nanoid": "^1.0.1",
    "react": "^16.2.0",
    "react-autosuggest": "^9.3.2",
    "react-dom": "^16.2.0",
    "string-hash": "^1.1.3",
    "typescript": "^2.6.2"
  },
  "bundlesize": [
    {
      "path": "./dist/js/frontend.js",
      "maxSize": "15KB"
    },
    {
      "path": "./dist/js/options-page.js",
      "maxSize": "85KB"
    },
    {
      "path": "./dist/js/reference-list.js",
      "maxSize": "250KB"
    }
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx,scss,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/{vendor,__tests__,__mocks__}/**",
      "!src/js/_entrypoints/*/index.{ts,tsx}",
      "!src/js/dialogs/index.tsx",
      "!src/js/utils/{devtools,logger,polyfill,render}.{ts,tsx}",
      "!src/js/drivers/*",
      "!src/js/utils/**/index.ts",
      "!src/js/utils/resolvers/*"
    ],
    "coverageDirectory": "lib/tmp/coverage",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "lib/tsconfig-tests.json"
      }
    },
    "mapCoverage": true,
    "moduleDirectories": [
      "node_modules",
      "./src/js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "./lib/before-test.ts"
    ],
    "setupTestFrameworkScriptFile": "./lib/setup-test.ts",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    }
  }
}
