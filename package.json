{
    "name": "academic-bloggers-toolkit",
    "version": "4.10.0",
    "description": "A plugin extending the functionality of WordPress for Academic Blogging",
    "license": "GPL-3.0",
    "scripts": {
        "precommit": "lint-staged",
        "prepush": "npm test",
        "test": "NODE_ENV=production jest --coverage",
        "posttest": "npm run lint",
        "lint": "tslint -p . -t codeFrame && tslint types/* -t codeFrame && stylint ./src/",
        "start": "gulp",
        "build": "NODE_ENV=production gulp",
        "deploy": "npm run build && torus run ./lib/deploy $npm_package_version",
        "update-translations": "torus run ./lib/update-translations",
        "update-styles": "node ./lib/updateStyles.js",
        "update-vendors": "curl -o 'src/vendor/citeproc.js' https://raw.githubusercontent.com/Juris-M/citeproc-js/master/citeproc.js"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "prettier --write --print-width 100 --single-quote --tab-width 4 --trailing-comma all",
            "git add"
        ]
    },
    "repository": "dsifford/academic-bloggers-toolkit",
    "author": "Derek P Sifford",
    "contributors": [
        {
            "name": "Frank Bennett"
        }
    ],
    "devDependencies": {
        "@types/enzyme": "^2.8.4",
        "@types/gulp": "^4.0.4",
        "@types/gulp-replace": "0.0.30",
        "@types/gulp-sort": "0.0.30",
        "@types/gulp-sourcemaps": "0.0.31",
        "@types/he": "^0.5.29",
        "@types/jest": "^20.0.6",
        "@types/node": "^8.0.19",
        "@types/react": "^16.0.0",
        "@types/react-dom": "^15.5.2",
        "@types/react-motion": "^0.0.23",
        "@types/react-test-renderer": "^15.5.2",
        "@types/webpack": "^3.0.5",
        "autoprefixer-stylus": "^0.14.0",
        "awesome-typescript-loader": "^3.2.2",
        "babel-core": "^6.25.0",
        "babel-loader": "^7.1.1",
        "babel-polyfill": "^6.22.0",
        "babel-preset-env": "^1.6.0",
        "babel-preset-react": "^6.24.1",
        "browser-sync": "^2.18.13",
        "css-loader": "^0.28.4",
        "enzyme": "^2.9.1",
        "enzyme-to-json": "^1.5.1",
        "gulp": "gulpjs/gulp#4.0",
        "gulp-replace": "^0.6.1",
        "gulp-sort": "^2.0.0",
        "gulp-sourcemaps": "^2.6.0",
        "gulp-stylus": "^2.5.0",
        "gulp-uglify": "^3.0.0",
        "gulp-wp-pot": "^2.0.6",
        "husky": "^0.14.3",
        "jest": "^20.0.4",
        "lint-staged": "^4.0.2",
        "merge-stream": "^1.0.1",
        "mobx-react-devtools": "^4.2.15",
        "prettier": "^1.5.3",
        "react-test-renderer": "^15.6.1",
        "style-loader": "^0.18.2",
        "stylint": "^1.5.9",
        "ts-jest": "^20.0.7",
        "ts-node": "^3.3.0",
        "tslint": "^5.5.0",
        "tslint-microsoft-contrib": "^5.0.1",
        "tslint-react": "^3.2.0",
        "uglify-es": "^3.0.27",
        "webpack": "^3.4.1",
        "webpack-bundle-analyzer": "^2.8.3"
    },
    "dependencies": {
        "bibtex-parse-js": "^0.0.23",
        "common-tags": "^1.4.0",
        "he": "^1.1.1",
        "mobx": "^3.2.2",
        "mobx-react": "^4.2.2",
        "react": "^15.6.1",
        "react-dom": "^15.6.1",
        "react-motion": "^0.5.0",
        "react-virtualized-select": "^3.1.0",
        "styled-jsx": "^1.0.10",
        "typescript": "^2.4.2",
        "whatwg-fetch": "^2.0.3"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,ts,tsx}",
            "!**/{vendor,__tests__}/**",
            "!src/js/{dialogs,reference-list}/index.tsx",
            "!src/js/Frontend.ts",
            "!src/js/utils/devtools.ts",
            "!src/js/utils/**/index.ts",
            "!src/js/utils/resolvers/*",
            "!src/js/drivers/**"
        ],
        "coverageDirectory": "lib/tmp/coverage",
        "globals": {
            "ts-jest": {
                "tsConfigFile": "lib/tsconfig-tests.json",
                "useBabelrc": true
            }
        },
        "mapCoverage": true,
        "moduleDirectories": [
            "node_modules",
            "./src/js"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "setupFiles": [
            "./lib/beforeTest.js"
        ],
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        }
    }
}
