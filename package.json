{
  "name": "academic-bloggers-toolkit",
  "version": "4.4.0",
  "description": "A plugin extending the functionality of WordPress for Academic Blogging.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "wp": "wpcmd() { docker exec $(docker ps -lq) /bin/bash -c \"sudo -u www-data wp $(echo $@)\"; };wpcmd ",
    "lint": "tslint src/lib/**/*{ts,tsx}",
    "start": "NODE_ENV=development node --max_old_space_size=8192 node_modules/.bin/gulp _dev",
    "build": "NODE_ENV=production node_modules/.bin/gulp _build",
    "update-styles": "node ./scripts/updateStyles.js",
    "update-vendors": "cd src/vendor && curl -o 'citeproc.js' https://raw.githubusercontent.com/Juris-M/citeproc-js/master/citeproc.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dsifford/academic-bloggers-toolkit.git"
  },
  "author": "Derek P Sifford",
  "contributors": [
    {
      "name": "Frank Bennett"
    }
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/dsifford/academic-bloggers-toolkit/issues"
  },
  "homepage": "https://github.com/dsifford/academic-bloggers-toolkit#readme",
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "awesome-typescript-loader": "^2.2.4",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.14.0",
    "browser-sync": "^2.16.0",
    "coveralls": "^2.11.14",
    "css-loader": "^0.25.0",
    "del": "^2.2.2",
    "enzyme": "^2.4.1",
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^7.1.0",
    "eslint-plugin-import": "^1.15.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-replace": "^0.5.4",
    "gulp-sort": "^2.0.0",
    "gulp-sourcemaps": "^2.0.0-alpha",
    "gulp-stylus": "^2.5.0",
    "gulp-uglify": "^2.0.0",
    "gulp-wp-pot": "^1.3.1",
    "jest": "^15.1.1",
    "jest-cli": "^15.1.1",
    "merge-stream": "^1.0.0",
    "mobx-react-devtools": "^4.2.6",
    "poststylus": "^0.2.3",
    "react-addons-test-utils": "^15.3.2",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.2",
    "tslint": "^3.15.1",
    "tslint-react": "^1.0.0",
    "webpack": "^2.1.0-beta.21",
    "webpack-stream": "^3.2.0"
  },
  "dependencies": {
    "@types/enzyme": "^2.4.33",
    "@types/jest": "^0.9.31",
    "@types/react": "^0.14.35",
    "@types/react-addons-css-transition-group": "^0.14.17",
    "@types/react-dom": "^0.14.17",
    "@types/sinon": "^1.16.30",
    "mobx": "^2.5.1",
    "mobx-react": "^3.5.6",
    "react": "^15.3.2",
    "react-addons-css-transition-group": "^15.3.2",
    "react-addons-shallow-compare": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-virtualized-select": "^2.0.0",
    "typescript": "^2.1.0-dev.20160724"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "compact": true
  },
  "jest": {
    "automock": true,
    "scriptPreprocessor": "scripts/jestPreprocessor.js",
    "testRegex": "(/__tests__/.*\\.(ts|tsx|js))$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "unmockedModulePathPatterns": [
      "react",
      "react-dom",
      "react-addons-test-utils",
      "fbjs",
      "enzyme",
      "sinon",
      "mobx",
      "mobx-react",
      "lib/js/utils/Constants",
      "scripts/fixtures"
    ],
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}",
      "!**/{vendor,__tests__}/**",
      "!src/lib/js/Frontend.ts",
      "!src/**/index.{ts,tsx}",
      "!src/lib/js/utils/{TinymceFunctions,Externals}.ts"
    ],
    "coverageDirectory": "tmp/coverage",
    "setupFiles": [
      "scripts/beforeTest.js"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "indent": [
        "error",
        4
      ]
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    }
  }
}
