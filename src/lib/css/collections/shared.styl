.noselect
    -webkit-appearance none
    -webkit-touch-callout none
    -webkit-user-select none
    -khtml-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none

btn($color = false)
    @extend .noselect
    if $color
        background $color
        color white
    else
        background white
        color $dark-gray
    background-image none
    border none
    border-radius 2px
    box-shadow $depth-1
    cursor pointer
    display inline-block
    font-size 13px
    font-weight 500 !important
    height 36px
    line-height 36px
    min-width 64px
    outline 0
    padding 0 16px
    text-align center
    text-decoration none
    text-transform uppercase
    transition $shadow-transition
    vertical-align middle
    white-space nowrap
    &:hover
    &:focus
        box-shadow $depth-2
    &:active:hover
        box-shadow $depth-3
        if $color
            background darken($color, 3)
        else
            background $border
    &:disabled
        cursor default
        pointer-events none
        opacity .6
        box-shadow none

    &.btn-flat
        if $color
            color $color
        background rgba(0, 0, 0, 0)
        box-shadow none !important
        &:hover
            background rgba(158,158,158,.2)
            &:active
                background $border
        &:active
            background lighten($border, 5)

    &.btn-icon
        border-radius 50%
        font-size 24px
        height 32px
        margin auto 0
        min-width 32px
        width 32px
        padding 0
        overflow hidden
        color inherit
        line-height normal


.hidden
    display none

.abt-admin-tooltip
    transform scale(0)
    transform-origin top center
    z-index 9999
    background rgba(66, 66, 66, 0.9)
    border-radius 2px
    color white
    display inline-block
    font-size 10px
    font-weight 500
    line-height 14px
    white-space nowrap
    max-width 170px
    position fixed
    top -500px
    left -500px
    padding 8px
    text-align center
    &.active
        animation pulse 200ms cubic-bezier(0, 0, 0.2, 1) forwards

@keyframes pulse
    0%
        transform scale(0)
        opacity 0
    50%
        transform scale(0.99)
    100%
        transform scale(1)
        opacity 1
        visibility visible

