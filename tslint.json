{
    "extends": ["tslint:latest", "tslint-react"],
    "rules": {
        "curly": false,
        "no-string-literal": false,
        "no-unused-new": false,
        "ordered-imports": false,
        "member-access": false,
        "interface-name": false,
        "one-line": [true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [true,
            "single",
            "jsx-double"
        ],
        "triple-equals": [true,
            "allow-null-check",
            "allow-undefined-check"
        ],
        "variable-name": [true,
            "ban-keywords"
        ],
        "jsx-alignment": true,
        "jsx-no-string-ref": true,
        "jsx-self-close": true,
        "jsx-no-lambda": true
    }
}
